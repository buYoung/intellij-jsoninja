<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.livteam.jsoninja</id>
    <name>JSONinja</name>
    <version>1.5.2</version>
    <vendor email="leebu18@gmail.com">BuYoung</vendor>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>

    <resource-bundle>messages.LocalizationBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <iconMapper mappingFile="JSONinjaIconMappings.json"/>
        <toolWindow factoryClass="com.livteam.jsoninja.ui.toolWindow.JsoninjaToolWindowFactory" id="JSONinja"
                    icon="com.livteam.jsoninja.icons.JsoninjaIcons.ToolWindowIcon"/>

        <projectConfigurable
                instance="com.livteam.jsoninja.settings.JsoninjaSettingsConfigurable"
                id="com.livteam.jsoninja.settings.JsoninjaSettingsConfigurable"
                key="settings.display.name"
                groupId="tools"
                nonDefaultProject="true"/>

        <diff.DiffExtension implementation="com.livteam.jsoninja.diff.JsonDiffExtension"/>

        <copyPastePreProcessor implementation="com.livteam.jsoninja.extensions.JsoninjaPastePreProcessor"/>
    </extensions>

    <applicationListeners>
        <listener class="com.livteam.jsoninja.listeners.JsonHelperActivationListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
        <listener class="com.livteam.jsoninja.listeners.JsonHelperActivationListener"
                  topic="com.intellij.ide.plugins.DynamicPluginListener"/>
    </applicationListeners>

    <actions>
        <!-- JSON Diff Actions Group -->
        <group id="com.livteam.jsoninja.action.group.DiffActions"
               icon="/icons/diff.svg"
               popup="true">
            <action id="com.livteam.jsoninja.action.ShowJsonDiffAction"
                    class="com.livteam.jsoninja.actions.ShowJsonDiffAction"
                    icon="/icons/diff.svg"/>
            <separator/>
            <action id="com.livteam.jsoninja.action.ShowJsonDiffInEditorTabAction"
                    class="com.livteam.jsoninja.actions.ShowJsonDiffInEditorTabAction"
                    icon="AllIcons.Actions.SplitVertically"/>
            <action id="com.livteam.jsoninja.action.ShowJsonDiffInWindowAction"
                    class="com.livteam.jsoninja.actions.ShowJsonDiffInWindowAction"
                    icon="AllIcons.Actions.MoveToWindow"/>
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <!-- JSONinja Tool Window Actions -->
        <group id="com.livteam.jsoninja.action.group.ToolWindowActions">
            <action id="com.livteam.jsoninja.action.AddTabAction"
                    class="com.livteam.jsoninja.actions.AddTabAction"
                    icon="AllIcons.General.Add"/>
            <action id="com.livteam.jsoninja.action.OpenJsonFileAction"
                    class="com.livteam.jsoninja.actions.OpenJsonFileAction"
                    icon="AllIcons.Actions.MenuOpen"/>
            <separator/>
            <action id="com.livteam.jsoninja.action.PrettifyJsonAction"
                    class="com.livteam.jsoninja.actions.PrettifyJsonAction"
                    icon="/icons/prettify.svg"/>
            <action id="com.livteam.jsoninja.action.UglifyJsonAction"
                    class="com.livteam.jsoninja.actions.UglifyJsonAction"
                    icon="/icons/uglify.svg"/>
            <action id="com.livteam.jsoninja.action.EscapeJsonAction"
                    class="com.livteam.jsoninja.actions.EscapeJsonAction"
                    icon="/icons/escape.svg"/>
            <action id="com.livteam.jsoninja.action.UnescapeJsonAction"
                    class="com.livteam.jsoninja.actions.UnescapeJsonAction"
                    icon="/icons/unescape.svg"/>
            <separator/>
            <action id="com.livteam.jsoninja.action.GenerateRandomJsonAction"
                    class="com.livteam.jsoninja.actions.GenerateRandomJsonAction"
                    icon="/icons/random_json.svg"/>
            <separator/>
            <action id="com.livteam.jsoninja.action.CloseTabAction"
                    class="com.livteam.jsoninja.actions.CloseTabAction">
                <keyboard-shortcut first-keystroke="ctrl W" keymap="$default"/>
                <keyboard-shortcut first-keystroke="meta W" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="meta W" keymap="Mac OS X 10.5+" replace-all="true"/>
                <add-to-group group-id="EditorTabPopupMenu" anchor="last"/>
            </action>
            <action id="com.livteam.jsoninja.action.OpenSettingsAction"
                    class="com.livteam.jsoninja.actions.OpenSettingsAction"
                    icon="AllIcons.General.Settings"/>
        </group>

        <action id="com.livteam.jsoninja.action.SwitchDiffDisplayModeAction"
                class="com.livteam.jsoninja.actions.SwitchDiffDisplayModeAction"/>

        <action id="com.livteam.jsoninja.action.CopyJsonQueryAction"
                class="com.livteam.jsoninja.actions.CopyJsonQueryAction"
        >
        </action>

        <group id="com.livteam.jsoninja.action.group.EditorPopup" popup="false">
            <reference ref="com.livteam.jsoninja.action.CopyJsonQueryAction"/>
        </group>

    </actions>
</idea-plugin>
